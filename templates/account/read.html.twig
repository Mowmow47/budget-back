{% extends 'base.html.twig' %}

{% block title %} Account - {{ parent() }}{% endblock %}

{% block body %}
	<div
		class="mb-2 divide-y-2 divide-solid divide-slate-300 rounded-xl bg-white p-4 font-semibold"
	>
		<div class="mb-2 flex flex-row justify-between">
			<div>
				<span class="block text-xl"> {{ account.name }} </span>
				<span class="font-normal text-gray-700">
					{{ account.accountnumber }}
				</span>
			</div>
			<div>
				<span class="text-green-500"> 1.528€ </span>
			</div>
		</div>
		<div class="flex flex-row justify-between pt-2">
			<div>
				<span class="text-red-500"> -37.57% </span>
			</div>
			<div>
				<span class="font-normal">Au 31/07 :</span>
				<span class="text-green-500">954€</span>
			</div>
		</div>
	</div>
	<div class="divide-y divide-solid rounded-xl bg-white px-4">
		{% for transaction in account.transactions %}
			<div class="flex min-w-full flex-row items-center py-4">
				<div
					class="font-semibold text-{{ transaction.amount < 0 ? 'red' : 'green'}}-500 w-24 md:w-36 shrink-0"
				>
					<img
						src="https://via.placeholder.com/24"
						alt="catégorie"
						class="mr-2 h-6 w-6 rounded-full md:inline"
					/>
					<span class="inline-flex items-center"> {{ transaction.amount }}€ </span>
				</div>
				<div class="grow font-normal text-black">{{ transaction.description }}</div>
				<div>{{ transaction.date|date('d/m/Y') }}</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
